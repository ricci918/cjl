<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_15">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_20"
        android:paddingStart="@dimen/space_10"
        android:paddingTop="@dimen/space_15"
        android:paddingEnd="@dimen/space_10"
        android:paddingBottom="@dimen/space_15"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toTopOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv2_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv1_id" />

        <TextView
            android:id="@+id/tv3_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv2_id" />

        <TextView
            android:id="@+id/tv4_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv3_id" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv1_icon"
        android:layout_width="@dimen/space_25"
        android:layout_height="@dimen/space_25"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:src="@mipmap/order1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1_id" />

    <ImageView
        android:id="@+id/iv2_icon"
        android:layout_width="@dimen/space_25"
        android:layout_height="@dimen/space_25"
        android:layout_marginStart="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:src="@mipmap/order2"
        app:layout_constraintStart_toEndOf="@id/iv1_icon"
        app:layout_constraintTop_toBottomOf="@id/cl1_id" />

    <TextView
        android:id="@+id/order_details"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_25"
        android:layout_marginStart="@dimen/space_5"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/shape_white_10_"
        android:gravity="center"
        android:text="@string/text73"
        android:textColor="#006F11"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1_id" />

    <TextView
        android:id="@+id/tv5_id"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_25"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginEnd="@dimen/space_5"
        android:background="@drawable/shape_black_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/order_details"
        app:layout_constraintTop_toBottomOf="@id/cl1_id" />

</androidx.constraintlayout.widget.ConstraintLayout>