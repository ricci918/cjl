<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_5_"
    >

    <TextView
        android:id="@+id/tv1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:gravity="center"
        android:text="@string/text219"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:lineSpacingExtra="@dimen/space_5"
        android:layout_marginTop="@dimen/space_30"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rb_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:numStars="5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_id" />

    <TextView
        android:id="@+id/tv2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/text220"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        android:textColor="#B7B7B7"
        android:layout_marginTop="@dimen/space_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/space_30"
        app:layout_constraintTop_toBottomOf="@id/rb_id" />
</androidx.constraintlayout.widget.ConstraintLayout>