<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_10">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@id/tv_name1"
        app:layout_constraintStart_toEndOf="@id/logo_id"
        app:layout_constraintTop_toTopOf="@id/logo_id" />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/logo_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_id"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_3"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/tv_name1" />
</androidx.constraintlayout.widget.ConstraintLayout>