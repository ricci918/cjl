<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f006">

    <TextView
        android:id="@+id/tv1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_30"
        android:text="@string/text153"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv4_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:gravity="center"
        android:text="@string/text152"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_id" />

    <WebView
        android:id="@+id/wv_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/shape_white_10_"
        android:layout_marginEnd="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_10"
        app:layout_constraintBottom_toTopOf="@id/cl_id"
        app:layout_constraintTop_toBottomOf="@id/tv4_id" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/cl_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginBottom="@dimen/space_20"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv3_id"
            android:layout_width="@dimen/space_100"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_20"
            android:background="@drawable/shape_white_5_"
            android:gravity="center"
            android:padding="@dimen/space_8"
            android:text="@string/text150"
            android:textColor="@color/f006"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv2_id"
            android:layout_width="@dimen/space_100"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_20"
            android:background="@drawable/shape_f2cd00_5"
            android:gravity="center"
            android:padding="@dimen/space_8"
            android:text="@string/text149"
            android:textColor="@color/f006"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>